entrypoint = "index.js"
run = "npm install && npm run dev"
modules = ["nodejs-20"]

[[ports]]
localPort = 3000
externalPort = 80

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Deploy CRM"

[[workflows.workflow]]
name = "Deploy CRM"
author = 43938259
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build && cd .. && npm install && npm start"

[deployment]
run = ["sh", "-c", "npm install && npm start"]
build = ["sh", "-c", "cd client && npm install && npm run build"]
