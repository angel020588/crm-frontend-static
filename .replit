entrypoint = "index.js"
run = "npm install && npm run dev"
modules = ["nodejs-20"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 4000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Desarrollo CRM"

[[workflows.workflow]]
name = "Deploy CRM"
author = 43938259
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build && cd .. && npm install && PORT=5000 npm start"

[[workflows.workflow]]
name = "Desarrollo CRM"
author = 43938259
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm start"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=3001 npm run dev"

[deployment]
run = ["sh", "-c", "npm install && npm start"]
build = ["sh", "-c", "cd client && npm install && npm run build"]
