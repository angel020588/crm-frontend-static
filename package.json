{
  "name": "crm-proseller",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "build": "npm install && npm run install-client && npm run build-client",
    "start": "node index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon index.js",
    "client": "cd client && npm start",
    "validate": "node run-validation.js",
    "validate:basic": "node run-validation.js --basic",
    "validate:endpoints": "node run-validation.js --endpoints",
    "test:routes": "node validators/route-validator.js",
    "test:health": "node validators/quick-health-check.js",
    "test:endpoints": "node test-all-endpoints.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.0.4",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.0",
    "pdfkit": "^0.17.1",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "stripe": "^18.3.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}